<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review], local: true) do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= form.input :content %>
    <%= form.input :rating %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>

<%= link_to 'Back to Restaurant', restaurant_path(@restaurant) %>
